{
  "name": "chukti",
  "version": "0.0.2",
  "description": "A library designed to simplify the smart contracts testing using human-readable syntax",
  "author": "Sohab Sk",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ITZSHOAIB/chukti"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "bin": {
    "chukti": "dist/internal/cli/index.cjs"
  },
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cucumber": {
      "types": "./dist/cucumber/index.d.ts",
      "import": "./dist/cucumber/index.js",
      "require": "./dist/cucumber/index.js"
    },
    "./cucumber/steps": {
      "types": "./dist/cucumber/steps/index.d.ts",
      "import": "./dist/cucumber/steps/index.js",
      "require": "./dist/cucumber/steps/index.cjs"
    }
  },
  "scripts": {
    "start": "ts-node src/internal/cli/index.ts",
    "build:local": "pnpm build && pnpm link --global",
    "build": "pnpm lint && pnpm clean && tsup --config tsup.config.ts",
    "clean": "rimraf dist",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish",
    "lint": "tsc"
  },
  "dependencies": {
    "chai": "^5.1.1",
    "command-exists": "^1.2.9",
    "execa": "^9.3.1",
    "fs-extra": "^11.2.0",
    "kleur": "^4.1.5",
    "ts-node": "^10.9.2",
    "viem": "^2.21.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@types/chai": "^4.3.19",
    "@types/command-exists": "^1.2.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.4.2",
    "@types/yargs": "^17.0.24",
    "glob": "^11.0.0",
    "rimraf": "^6.0.1",
    "tslib": "^2.7.0",
    "tsup": "^8.2.4",
    "typescript": "^5.1.6"
  },
  "files": [
    "dist",
    "sample-projects",
    "templates"
  ],
  "keywords": [
    "hardhat",
    "viem",
    "cli",
    "deploy",
    "test",
    "smart contract"
  ]
}
